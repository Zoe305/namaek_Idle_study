#include <stdio.h>

int main(void)
{
	int i = 0;
	int num;
	int arrx[10000];
	int arry[10000];
	double result1 = 0;
	double result2 = 0;

	scanf_s("%d", &num);

	for (i = 0; i < num; i++)
		scanf_s("%d %d", &arrx[i], &arry[i]);
	
	for (i = 0; i < num; i++)
	{
		if (i + 1 == num)
		{
			result1 = result1 + arrx[i] * arry[0];
			result2 = result2 + arrx[0] * arry[i];
		}
		else
		{
			result1 = result1 + arrx[i] * arry[i + 1];
			result2 = result2 + arrx[i + 1] * arry[i];
		}
	}
	
	result1 = result1 - result2;

	if (result1 < 0)
		result1 = result1 * (-1);
		
	printf("%.1lf", result1 / 2);

	return 0;
}
